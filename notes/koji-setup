koji add-target stream9 CentOS_Stream_9 Fermilab-CentOS-Stream9-TESTING

koji add-external-repo -t CentOS_Stream_9 -p 10 'CentOS Stream 9 Local RPMs' "http://${HOSTNAME}/kojifiles/local/stream9/"
koji add-external-repo -t CentOS_Stream_9 -p 12 'CentOS Stream 9 BaseOS' 'https://linux-mirrors.fnal.gov/linux/centos-stream/9-stream/BaseOS/$arch/os/'
koji add-external-repo -t CentOS_Stream_9 -p 15 'CentOS Stream 9 AppStream' 'https://linux-mirrors.fnal.gov/linux/centos-stream/9-stream/AppStream/$arch/os/'
koji add-external-repo -t CentOS_Stream_9 -p 20 'CentOS Stream 9 Code Ready Builder' 'https://linux-mirrors.fnal.gov/linux/centos-stream/9-stream/CRB/$arch/os/'
koji add-external-repo -t CentOS_Stream_9 -p 25 'EPEL 9 Next Everything' 'https://linux-mirrors.fnal.gov/linux/fedora/epel/next/9/Everything/$arch'
